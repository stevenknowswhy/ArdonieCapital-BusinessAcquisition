# BuyMartV1 Staging Environment Configuration
# Copy this file to .env.staging and fill in your actual values

# Environment
ENVIRONMENT=staging
NODE_ENV=production
DEBUG=false

# Application Configuration
APP_NAME=BuyMartV1-Staging
APP_VERSION=1.0.0
APP_URL=https://staging.buymart.ardonie.com
API_BASE_URL=https://staging.buymart.ardonie.com/api

# Supabase Configuration (Staging)
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_ANON_KEY=your_staging_anon_key_here
SUPABASE_SERVICE_KEY=your_staging_service_key_here

# OAuth Configuration (Staging)
OAUTH_GOOGLE_CLIENT_ID=your_staging_google_client_id
OAUTH_MICROSOFT_CLIENT_ID=your_staging_microsoft_client_id
OAUTH_MICROSOFT_TENANT_ID=your_staging_microsoft_tenant_id

# Payment Configuration (Staging/Test)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_staging_key
STRIPE_SECRET_KEY=sk_test_your_stripe_staging_secret
STRIPE_WEBHOOK_SECRET=whsec_your_staging_webhook_secret

# Analytics (Staging)
ANALYTICS_ID=G-STAGING-ID
ANALYTICS_DEBUG=false

# Email Configuration (Staging)
SENDINBLUE_API_KEY=your_staging_sendinblue_key
EMAIL_FROM=staging@ardonie.com
EMAIL_REPLY_TO=staging@ardonie.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=./uploads/staging

# Security Configuration
JWT_SECRET=your_staging_jwt_secret_key_here
ENCRYPTION_KEY=your_staging_encryption_key_here
SESSION_SECRET=your_staging_session_secret_here

# Rate Limiting (Staging)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=500

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/staging.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=10

# Database Configuration
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_TIMEOUT=30000

# Cache Configuration (Staging)
CACHE_TTL=600
CACHE_MAX_SIZE=500

# Feature Flags (Staging)
FEATURE_REAL_TIME_MESSAGING=true
FEATURE_AI_MATCHMAKING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_PAYMENT_PROCESSING=true
FEATURE_DOCUMENT_MANAGEMENT=true

# Staging Tools
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAPS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Testing Configuration
TEST_DATABASE_URL=https://your-staging-project.supabase.co
TEST_USER_EMAIL=staging-test@ardonie.com
TEST_USER_PASSWORD=StagingTestPassword123!

# Monitoring (Staging)
MONITORING_ENABLED=true
SENTRY_DSN=your_staging_sentry_dsn
SENTRY_ENVIRONMENT=staging

# CDN Configuration (Staging)
CDN_URL=https://staging-cdn.ardonie.com
STATIC_ASSETS_URL=https://staging-cdn.ardonie.com/assets

# Social Media Integration (Staging)
LINKEDIN_CLIENT_ID=your_staging_linkedin_client_id
TWITTER_API_KEY=your_staging_twitter_api_key
FACEBOOK_APP_ID=your_staging_facebook_app_id

# Third-Party Services (Staging)
GOOGLE_MAPS_API_KEY=your_staging_google_maps_key
RECAPTCHA_SITE_KEY=your_staging_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_staging_recaptcha_secret_key

# Backup Configuration (Staging)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=14

# Performance Configuration
COMPRESSION_ENABLED=true
MINIFICATION_ENABLED=true
BUNDLE_ANALYZER_ENABLED=false

# Server Configuration
SERVER_PORT=443
SERVER_HOST=staging.buymart.ardonie.com
SERVER_HTTPS=true

# CORS Configuration (Staging)
CORS_ORIGIN=https://staging.buymart.ardonie.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Webhook Configuration (Staging)
WEBHOOK_SECRET=your_staging_webhook_secret
WEBHOOK_TIMEOUT=30000

# AI/ML Configuration (Staging)
OPENAI_API_KEY=your_staging_openai_api_key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000

# Search Configuration (Staging)
SEARCH_PROVIDER=elasticsearch
ELASTICSEARCH_URL=https://staging-search.ardonie.com
SEARCH_INDEX_NAME=buymart_staging

# Notification Configuration (Staging)
PUSH_NOTIFICATION_ENABLED=true
FCM_SERVER_KEY=your_staging_fcm_server_key
VAPID_PUBLIC_KEY=your_staging_vapid_public_key
VAPID_PRIVATE_KEY=your_staging_vapid_private_key

# SSL Configuration (Staging)
SSL_CERT_PATH=/etc/ssl/certs/staging.crt
SSL_KEY_PATH=/etc/ssl/private/staging.key

# Load Balancer Configuration (Staging)
LOAD_BALANCER_ENABLED=false
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30000

# Deployment Configuration (Staging)
DEPLOYMENT_STRATEGY=blue-green
DEPLOYMENT_TIMEOUT=600000
ROLLBACK_ENABLED=true
