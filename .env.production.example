# BuyMartV1 Production Environment Configuration
# Copy this file to .env.production and fill in your actual values
# NEVER commit this file with real values to version control

# Environment
ENVIRONMENT=production
NODE_ENV=production
DEBUG=false

# Application Configuration
APP_NAME=BuyMartV1
APP_VERSION=1.0.0
APP_URL=https://buymart.ardonie.com
API_BASE_URL=https://api.buymart.ardonie.com

# Supabase Configuration (Production)
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_ANON_KEY=your_production_anon_key_here
SUPABASE_SERVICE_KEY=your_production_service_key_here

# OAuth Configuration (Production)
OAUTH_GOOGLE_CLIENT_ID=your_production_google_client_id
OAUTH_MICROSOFT_CLIENT_ID=your_production_microsoft_client_id
OAUTH_MICROSOFT_TENANT_ID=your_production_microsoft_tenant_id

# Payment Configuration (Production/Live)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_production_key
STRIPE_SECRET_KEY=sk_live_your_stripe_production_secret
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Analytics (Production)
ANALYTICS_ID=G-PRODUCTION-ID
ANALYTICS_DEBUG=false

# Email Configuration (Production)
SENDINBLUE_API_KEY=your_production_sendinblue_key
EMAIL_FROM=noreply@ardonie.com
EMAIL_REPLY_TO=support@ardonie.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=./uploads/production

# Security Configuration (Production - High Security)
JWT_SECRET=your_production_jwt_secret_key_here_very_secure
ENCRYPTION_KEY=your_production_encryption_key_here_very_secure
SESSION_SECRET=your_production_session_secret_here_very_secure

# Rate Limiting (Production - Strict)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=./logs/production.log
LOG_MAX_SIZE=52428800
LOG_MAX_FILES=30

# Database Configuration
DB_POOL_MIN=10
DB_POOL_MAX=50
DB_TIMEOUT=30000

# Cache Configuration (Production)
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Feature Flags (Production)
FEATURE_REAL_TIME_MESSAGING=true
FEATURE_AI_MATCHMAKING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_PAYMENT_PROCESSING=true
FEATURE_DOCUMENT_MANAGEMENT=true

# Production Optimizations
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAPS=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Monitoring (Production)
MONITORING_ENABLED=true
SENTRY_DSN=your_production_sentry_dsn
SENTRY_ENVIRONMENT=production

# CDN Configuration (Production)
CDN_URL=https://cdn.ardonie.com
STATIC_ASSETS_URL=https://cdn.ardonie.com/assets

# Social Media Integration (Production)
LINKEDIN_CLIENT_ID=your_production_linkedin_client_id
TWITTER_API_KEY=your_production_twitter_api_key
FACEBOOK_APP_ID=your_production_facebook_app_id

# Third-Party Services (Production)
GOOGLE_MAPS_API_KEY=your_production_google_maps_key
RECAPTCHA_SITE_KEY=your_production_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_production_recaptcha_secret_key

# Backup Configuration (Production)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90

# Performance Configuration (Production)
COMPRESSION_ENABLED=true
MINIFICATION_ENABLED=true
BUNDLE_ANALYZER_ENABLED=false

# Server Configuration
SERVER_PORT=443
SERVER_HOST=buymart.ardonie.com
SERVER_HTTPS=true

# CORS Configuration (Production - Strict)
CORS_ORIGIN=https://buymart.ardonie.com,https://www.buymart.ardonie.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Webhook Configuration (Production)
WEBHOOK_SECRET=your_production_webhook_secret_very_secure
WEBHOOK_TIMEOUT=30000

# AI/ML Configuration (Production)
OPENAI_API_KEY=your_production_openai_api_key
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000

# Search Configuration (Production)
SEARCH_PROVIDER=elasticsearch
ELASTICSEARCH_URL=https://search.ardonie.com
SEARCH_INDEX_NAME=buymart_production

# Notification Configuration (Production)
PUSH_NOTIFICATION_ENABLED=true
FCM_SERVER_KEY=your_production_fcm_server_key
VAPID_PUBLIC_KEY=your_production_vapid_public_key
VAPID_PRIVATE_KEY=your_production_vapid_private_key

# SSL Configuration (Production)
SSL_CERT_PATH=/etc/ssl/certs/production.crt
SSL_KEY_PATH=/etc/ssl/private/production.key

# Load Balancer Configuration (Production)
LOAD_BALANCER_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30000

# Deployment Configuration (Production)
DEPLOYMENT_STRATEGY=blue-green
DEPLOYMENT_TIMEOUT=600000
ROLLBACK_ENABLED=true

# AWS Configuration (Production)
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=buymart-production-assets
AWS_CLOUDFRONT_DISTRIBUTION=your_cloudfront_distribution_id

# Hostinger Configuration (Production)
HOSTINGER_FTP_HOST=your_hostinger_ftp_host
HOSTINGER_FTP_USER=your_hostinger_ftp_user
HOSTINGER_FTP_PASSWORD=your_hostinger_ftp_password
HOSTINGER_DOMAIN=buymart.ardonie.com

# Security Headers (Production)
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# Performance Monitoring (Production)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
DATADOG_API_KEY=your_datadog_api_key
PERFORMANCE_BUDGET_JS=250000
PERFORMANCE_BUDGET_CSS=100000
