# BuyMartV1 Development Environment Configuration
# Copy this file to .env.development and fill in your actual values

# Environment
ENVIRONMENT=development
NODE_ENV=development
DEBUG=true

# Application Configuration
APP_NAME=BuyMartV1
APP_VERSION=1.0.0
APP_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000/api

# Supabase Configuration (Development)
SUPABASE_URL=https://your-dev-project.supabase.co
SUPABASE_ANON_KEY=your_development_anon_key_here
SUPABASE_SERVICE_KEY=your_development_service_key_here

# OAuth Configuration (Development)
OAUTH_GOOGLE_CLIENT_ID=your_dev_google_client_id
OAUTH_MICROSOFT_CLIENT_ID=your_dev_microsoft_client_id
OAUTH_MICROSOFT_TENANT_ID=your_dev_microsoft_tenant_id

# Payment Configuration (Development/Test)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Analytics (Development)
ANALYTICS_ID=G-XXXXXXXXXX
ANALYTICS_DEBUG=true

# Email Configuration (Development)
SENDINBLUE_API_KEY=your_dev_sendinblue_key
EMAIL_FROM=dev@ardonie.com
EMAIL_REPLY_TO=dev@ardonie.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=./uploads/dev

# Security Configuration
JWT_SECRET=your_development_jwt_secret_key_here
ENCRYPTION_KEY=your_development_encryption_key_here
SESSION_SECRET=your_development_session_secret_here

# Rate Limiting (Development - More Lenient)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/development.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Database Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Cache Configuration (Development)
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Feature Flags (Development)
FEATURE_REAL_TIME_MESSAGING=true
FEATURE_AI_MATCHMAKING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_PAYMENT_PROCESSING=true
FEATURE_DOCUMENT_MANAGEMENT=true

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Testing Configuration
TEST_DATABASE_URL=https://your-test-project.supabase.co
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=TestPassword123!

# Monitoring (Development)
MONITORING_ENABLED=false
SENTRY_DSN=your_development_sentry_dsn
SENTRY_ENVIRONMENT=development

# CDN Configuration (Development)
CDN_URL=http://localhost:8000
STATIC_ASSETS_URL=http://localhost:8000/assets

# Social Media Integration (Development)
LINKEDIN_CLIENT_ID=your_dev_linkedin_client_id
TWITTER_API_KEY=your_dev_twitter_api_key
FACEBOOK_APP_ID=your_dev_facebook_app_id

# Third-Party Services (Development)
GOOGLE_MAPS_API_KEY=your_dev_google_maps_key
RECAPTCHA_SITE_KEY=your_dev_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_dev_recaptcha_secret_key

# Backup Configuration (Development)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# Performance Configuration
COMPRESSION_ENABLED=false
MINIFICATION_ENABLED=false
BUNDLE_ANALYZER_ENABLED=true

# Development Server Configuration
DEV_SERVER_PORT=8000
DEV_SERVER_HOST=localhost
DEV_SERVER_HTTPS=false

# CORS Configuration (Development - Permissive)
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Webhook Configuration (Development)
WEBHOOK_SECRET=your_development_webhook_secret
WEBHOOK_TIMEOUT=30000

# AI/ML Configuration (Development)
OPENAI_API_KEY=your_dev_openai_api_key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000

# Search Configuration (Development)
SEARCH_PROVIDER=local
ELASTICSEARCH_URL=http://localhost:9200
SEARCH_INDEX_NAME=buymart_dev

# Notification Configuration (Development)
PUSH_NOTIFICATION_ENABLED=false
FCM_SERVER_KEY=your_dev_fcm_server_key
VAPID_PUBLIC_KEY=your_dev_vapid_public_key
VAPID_PRIVATE_KEY=your_dev_vapid_private_key
